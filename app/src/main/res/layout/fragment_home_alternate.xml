<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/igaslogo"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


    <GridLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:rowCount="2"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        >

        <!--Buy Gas Layour-->
        <LinearLayout
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:background="@drawable/blue_rect"
            android:orientation="vertical"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            >

            <ImageView
                android:layout_margin="8dp"
                android:id="@+id/cardViewBuyGas"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/gas"
                 />

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Buy Gas"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </LinearLayout>

        <!--Refill Gas Layout-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:background="@drawable/blue_rect"
            android:orientation="vertical"

            >

            <ImageView
                android:layout_margin="8dp"
                android:id="@+id/cardViewRefill"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/refill"
                />

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Refill Gas"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25dp" />

        </LinearLayout>

        <!--Gas Equipments Layout-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:background="@drawable/blue_rect"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/cardViewGasEquipments"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/equipments"
                />

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Gas Equipments"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp" />

        </LinearLayout>

        <!--Bulk Purcahase Layout-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:background="@drawable/blue_rect"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/cardViewBulkPurchase"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/bulkpurchase"
                />

            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Bulk Purchase"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp" />

        </LinearLayout>



    </GridLayout>

</LinearLayout>
</ScrollView>